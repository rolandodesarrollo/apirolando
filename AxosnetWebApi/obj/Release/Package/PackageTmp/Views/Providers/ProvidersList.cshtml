
@{
    ViewBag.Title = "ProvidersList";
}

<script src="~/Scripts/Controllers/ProvidersCtrl.js"></script>
<div ng-controller="providersListCtrl">
    <br />
    <br />
    <div class="row">
        <div class="col-sm-6">
            <h3>{{message}}</h3>
            <h4>{{providers.length}} registrados</h4>
        </div>
        <div class="col-sm-6" >
            <p><a href="#" ng-click="openAddProviderPopUp()" class="btn btn-success btn-sm pull-right">Agregar</a></p>
        </div>
    </div>
    <table class="table nav-stacked">
        <thead>
            <tr>
                <td># Proveedor</td>
                <td>Nombre Proveedor</td>
                <td>Teléfono</td>
            </tr>

        </thead>
        <tbody>
            <tr ng-repeat="p in providers track by $index">

                <td>{{p.Id}}</td>
                <td>{{p.ProviderName}}</td>
                <td>{{p.Telephone}}</td>
            </tr>
        </tbody>

    </table>


    <div id="providerPanel" class="modal fade" role="dialog">
        <div class="modal-dialog" style="width:400px;">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="row">
                        <div class="col-sm-12" style="top:20px">
                            <h4 class="modal-title" style="padding-left:45px">
                                <i class="fa fa-user"></i>
                                Agregar Gasto
                            </h4>
                        </div>

                    </div>
                </div>
                <div class="modal-body">
                    <div class="panel-body">

                        <form>
                            <div>
                                <h4>Gasto</h4>
                                <input type="text" class="form-control input-sm" ng-model="newProviderName" placeholder="Nombre del proveedor">
                                <br />
                                <input type="text" class="form-control input-sm" ng-model="newProviderTelephone" placeholder="Teléfono ">
                                <br />
                            </div>
                        </form>

                        <span style="color:red" ng-show="responseMessage.length > 0">{{responseMessage}}</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success" ng-click="addNewProvider()">Guardar</button>
                </div>
            </div>

        </div>
    </div>



</div>
